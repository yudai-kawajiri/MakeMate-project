<%# app/views/devise/sessions/new.html.erb %>

<%# 画面全体を中央に配置するコンテナ %>
<div class="flex flex-col items-center justify-center min-h-screen bg-gray-100">

  <%# フォームの白い枠と影のコンテナ %>
  <div class="bg-white p-8 rounded-lg shadow-xl w-full max-w-lg">

    <%# タイトル %>
    <h1 class="text-2xl font-bold text-center mb-6">寿司管理システム</h1>

    <%# タブエリア - ログインと新規登録の切り替えボタン %>
    <div class="flex border-b border-gray-300 mb-6">

      <%# ログインリンク - 現在アクティブなタブ %>
      <%= link_to 'ログイン', new_user_session_path,
          data: { turbo_frame: 'auth_form' },
          class: "flex-1 py-2 text-center font-bold text-lg border-b-2 border-indigo-600 text-indigo-600" %>

      <%# 新規登録リンク - クリックでTurbo Frame内を切り替える %>
      <%= link_to '新規登録', new_user_registration_path,
          data: { turbo_frame: 'auth_form' },
          class: "flex-1 py-2 text-center font-bold text-lg text-gray-500 hover:text-indigo-600" %>
    </div>

    <%# フォーム本体をロードするTurbo Frame - ここが切り替わる %>
    <turbo-frame id="auth_form">

      <%# Deviseフォームヘルパーの開始 %>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

        <%# メールアドレスのラベル %>
        <h2 class="text-sm font-semibold text-gray-600 mb-4">メールアドレス</h2>
        <div class="field mb-4">
          <%# メールアドレス入力フィールド %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email",
            class: "w-full p-3 border border-gray-300 rounded focus:outline-none focus:border-indigo-500",
            placeholder: "例: test@makemate.com" %>
        </div>

        <%# パスワードのラベル %>
        <h2 class="text-sm font-semibold text-gray-600 mb-4">パスワード</h2>
        <div class="field mb-6">
          <%# パスワード入力フィールド %>
          <%= f.password_field :password, autocomplete: "current-password",
            class: "w-full p-3 border border-gray-300 rounded focus:outline-none focus:border-indigo-500",
            placeholder: "パスワード" %>
        </div>

        <%# ログイン情報記憶チェックボックス %>
        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me, "ログイン情報を記憶する" %>
          </div>
        <% end %>

        <%# ログインボタン（アクション） %>
        <div class="actions">
          <%= f.submit "ログイン",
            class: "w-full py-3 bg-black text-white font-bold rounded hover:bg-gray-800 transition duration-150 cursor-pointer" %>
        </div>
      <% end %>

      <%# 共有リンク（パスワード忘れなど） %>
      <p class="mt-4"><%= render "devise/shared/links" %></p>

    </turbo-frame>

  </div>
</div>
